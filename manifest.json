{
  "manifest_version": 3,
  "name": "Rewards Calculator for the H‑E‑B Credit Card",
  "version": "0.1",
  "description": "Calculates the effective rewards percentage for your cart.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.heb.com/checkout"
      ],
      "js": [
        "common.js",
        "checkout.js"
      ]
    },
    {
      "matches": [
        "https://www.heb.com/my-account/order-history/*"
      ],
      "js": [
        "common.js",
        "order-history.js"
      ]
    }
  ]
}
